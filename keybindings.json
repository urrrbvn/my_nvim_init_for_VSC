[
  // Навигация между всеми элементами UI
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "editorTextFocus || sideBarFocus || panelFocus || terminalFocus"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown",
    "when": "editorTextFocus || sideBarFocus || panelFocus || terminalFocus"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp",
    "when": "editorTextFocus || sideBarFocus || panelFocus || terminalFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "editorTextFocus || sideBarFocus || panelFocus || terminalFocus"
  },
  // Альтернативно, можно отключить стандартные бинды VSCode
  {
    "key": "ctrl+h",
    "command": "-deleteLeft"
  },
  {
    "key": "tab",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "shift+tab",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "enter",
    "command": "acceptSelectedSuggestion",
    "when": "suggestWidgetHasFocusedSuggestion && suggestWidgetVisible && textInputFocus"
  },
  //motions in palette comand
  {
    "key": "ctrl+j",
    "command": "workbench.action.quickOpenSelectNext",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.quickOpenNavigateNextInFilePicker",
    "when": "inQuickOpen && inFilePicker"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.quickOpenNavigatePreviousInFilePicker",
    "when": "inQuickOpen && inFilePicker"
  },
  //toggle sidebar
  //   {
  //     "key": "space e",
  //     "command": "workbench.action.toggleSidebarVisibility",
  //     "when": "editorTextFocus"
  //   }
]
